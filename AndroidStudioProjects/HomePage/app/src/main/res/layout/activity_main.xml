<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/reportText"
        android:layout_width="156dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Report"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="166dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="end"
        android:text="Jan 18, 2019"
        android:textAlignment="viewEnd"
        android:layout_alignParentRight="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/report1"
        android:layout_width="379dp"
        android:layout_height="44dp"
        android:layout_below="@+id/dateText"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/editBtn"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_below="@+id/report1"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="edit"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@android:color/holo_green_dark"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_below="@+id/report1"
        android:layout_marginTop="7dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/editBtn"
        android:text="delete"
        android:textSize="15sp"
        android:textColor="@android:color/holo_green_dark"
        android:background="@android:color/transparent"/>

    <View
        android:layout_below="@+id/deleteBtn"
        android:id="@+id/view1"
        android:layout_width="364dp"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/darker_gray" />


    <TextView
        android:layout_below="@+id/view1"
        android:id="@+id/reportText2"
        android:layout_width="156dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Report"
        android:textSize="18sp" />

    <TextView
        android:layout_below="@+id/view1"
        android:id="@+id/dateText2"
        android:layout_width="166dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="end"
        android:text="Feb 7, 2019"
        android:textAlignment="viewEnd"
        android:layout_alignParentRight="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/report2"
        android:layout_width="379dp"
        android:layout_height="44dp"
        android:layout_below="@+id/dateText2"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/editBtn2"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_below="@+id/report2"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="edit"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@android:color/holo_green_dark"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/deleteBtn2"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_below="@+id/report2"
        android:layout_marginTop="7dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/editBtn"
        android:text="delete"
        android:textSize="15sp"
        android:textColor="@android:color/holo_green_dark"
        android:background="@android:color/transparent"/>

    <View
        android:layout_below="@+id/deleteBtn2"
        android:layout_width="364dp"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/darker_gray" />

</RelativeLayout>